{
  "name": "@repo/ui",
  "version": "0.9.6",
  "private": true,
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/components/*.d.ts",
      "default": [
        "./dist/components/*.js",
        "./dist/components/*.jsx"
      ]
    },
    "./utils": {
      "types": "./dist/lib/utils.d.ts",
      "default": "./dist/lib/utils.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": "./dist/hooks/*.js"
    },
    "./configs/postcss": "./postcss.config.mjs",
    "./configs/tailwind": "./tailwind.config.ts",
    "./globals.css": "./src/styles/globals.css"
  },
  "scripts": {
    "ui:add": "pnpm dlx shadcn@latest add",
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "git clean -xdf .cache dist .turbo node_modules",
    "style": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "postadd": "prettier src --write --list-different --ignore-path ../../.gitignore && eslint src --fix"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "0.471.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "^1.0.7",
    "tsup": "^8.3.5",
    "typescript": "catalog:"
  }
}
